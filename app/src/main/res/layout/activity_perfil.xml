<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="54dp"
        android:text="Seja bem vindo<NOME>! Esse é um aplicativo que te ajuda a saber e calcular o seu Indice de Massa Corporal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="128sp"
        android:layout_height="128sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308"
        app:srcCompat="@drawable/user" />

    <Button
        android:id="@+id/button"
        android:layout_width="494.5sp"
        android:layout_height="70sp"
        android:background="@color/accent"
        android:shadowColor="#F2F2F2"
        android:text="VAMOS LÁ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintVertical_bias="0.948"
        tools:layout_editor_absoluteX="-42dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="41dp"
        android:layout_height="27dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/peso"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/kg" />

    <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu peso:"
        app:layout_constraintBottom_toTopOf="@+id/altura"
        app:layout_constraintTop_toTopOf="@+id/idade"
        app:layout_constraintVertical_bias="0.512"
        tools:layout_editor_absoluteX="175dp" />

    <TextView
        android:id="@+id/idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua idade:"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="309dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36sp"
        android:layout_height="36sp"
        app:layout_constraintEnd_toStartOf="@+id/idade"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/person"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="Sua altura: "
        app:layout_constraintBottom_toTopOf="@+id/button"
        tools:layout_editor_absoluteX="175dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42sp"
        android:layout_height="42sp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:srcCompat="@drawable/person2"
        tools:layout_editor_absoluteY="393dp" />

</androidx.constraintlayout.widget.ConstraintLayout>